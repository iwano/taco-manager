%h1.label
  {{name}}

.well
  .tag-info
    Rules
  %ol
    {{#each taco_rules itemController="taco_rule"}}
    <li {{bindAttr class="isEditing:editing"}}>
    {{#if isEditing}}
    {{view TacoManager.EditTacoRuleView valueBinding="description"}}
    {{else}}
    <label {{action "editTacoRule" on="doubleClick"}} class='editable'/>{{description}}
    {{/if}}
    </li>
    {{/each}}
  %form.form-inline
    {{view Ember.TextField id="new-taco-rule-description" placeholder="Rule's description" valueBinding="newDescription" action="createTacoRule"}}
    <button class='btn' id='new-taco-rule-btn' {{action createTacoRule}}> Create Taco Rule</button>
  .tag-info-bottom
    Last Updated:
    %strong
      {{fromNow lastUpdatedAt}}

.well
  .tag-info
    %strong
      {{usersCount}}
    users
  %ul
    {{#each users}}
    %li
      {{name}}
  {{/each}}
